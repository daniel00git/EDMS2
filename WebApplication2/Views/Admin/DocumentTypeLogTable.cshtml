@model IEnumerable<WebApplication2.Models.DocumentTypeLog>

@{
    ViewData["Title"] = "Log Table_DocType";
    //Layout = "AdminLayout";
}
<!-- Ensure jQuery is loaded -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Ensure Bootstrap is loaded -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<body id="page-top">

    <div class="card shadow mb-4">

        <div class="table-responsive">
            <h1 class="h3 mb-2 text-gray-800">Log Table (Doc Type)</h1>
            <br />
            <table class="table table-bordered" id="logTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Document Type ID</th>
                        <th>Date Time</th>
                        <th>Activity</th>
                        <th>User Email</th>
                        <th>Current Value</th>
                        <th>New Value</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                        if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@item.DocTypeOptionId</td>
                                    <td>@item.DocTypeLogDate.ToString("g")</td>
                                    <td>@item.DocTypeLogActivity</td>
                                    <td>@item.DocTypeLogEmail</td>
                                    <td>@item.CurrentDocTypeOption</td>
                                    <td>@item.NewDocTypeOption</td>
                                </tr>
                                counter++;
                            }
                        }
                    }
                </tbody>
            </table>
        </div>

</body>


<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
